{
  "name": "two-button-roguelite",
  "version": "1.0.2",
  "description": "100% TDD Two-Button Roguelite Game",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:debug": "DEBUG=* vite",
    "dev:demo": "DEMO_MODE=true vite",
    "build": "npm run typecheck && tsc && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "verify:coverage": "node scripts/verify-coverage.js",
    "test:unit": "vitest run src/tests/unit",
    "test:integration": "vitest run src/tests/integration",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:perf": "node scripts/perf-test.js",
    "test:all": "npm run test:coverage && npm run test:e2e",
    "lint": "eslint src --max-warnings=0",
    "lint:fix": "eslint src --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\"",
    "analyze": "vite-bundle-visualizer",
    "predeploy": "npm run typecheck",
    "deploy": "node scripts/deploy-full.js",
    "deploy:preview": "npm run predeploy && node scripts/deploy.js --preview",
    "deploy:patch": "npm version patch && npm run deploy",
    "deploy:minor": "npm version minor && npm run deploy",
    "deploy:major": "npm version major && npm run deploy",
    "postdeploy": "node scripts/post-deploy.js",
    "clean": "rm -rf dist coverage .turbo node_modules/.cache",
    "verify": "npm run lint && npm run typecheck && npm run test:coverage"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^22.10.6",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.5",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "fast-check": "^3.22.0",
    "happy-dom": "^16.5.3",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3",
    "vite": "^6.0.6",
    "vite-bundle-visualizer": "^1.2.1",
    "vitest": "^2.1.8",
    "wrangler": "^4.25.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/franzai/two-button-roguelite"
  },
  "keywords": [
    "game",
    "roguelite",
    "tdd",
    "react",
    "typescript",
    "cloudflare"
  ],
  "author": "Franz Enzenhofer",
  "license": "MIT"
}
